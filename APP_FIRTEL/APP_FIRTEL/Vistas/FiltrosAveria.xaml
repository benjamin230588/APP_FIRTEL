<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_FIRTEL.Vistas.FiltrosAveria"
             xmlns:custom="clr-namespace:APP_FIRTEL.Clases"
             Title="Filtros">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="FillAndExpand" Margin="10,15">
                <Grid  RowSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition />
                     
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Text="Desde" FontAttributes="Bold" FontSize="17" HorizontalOptions="Start"/>
                    <Label
                        Text="Hasta"
                        
                        Grid.Column="1"  Grid.Row="0" x:Name="txtnombre" HorizontalOptions="Start" FontAttributes="Bold" FontSize="17"
                    
                    />
                    <custom:DatePickerCtrl  Grid.Column="0"  Grid.Row="1" x:Name="datePicker"   
                                             Format="dd/MM/yyyy"   HorizontalOptions="FillAndExpand" HeightRequest="80"
                                MinimumDate="01/01/1950"/>


                    
                    <custom:DatePickerCtrl  Grid.Column="1"  Grid.Row="1" x:Name="datePicker55"   
                                             Format="dd/MM/yyyy"   HorizontalOptions="FillAndExpand" HeightRequest="40"
                                MinimumDate="01/01/1950"/>




                </Grid>
                <StackLayout HeightRequest="3"></StackLayout>
                <custom:CustomPicker
                                         Image="ic_arrow_drop_down"
                                        Title="Seleccione Estado"
                                   TitleColor="Green"
                                
                                   FontSize="16"
                                   
                                   ItemColor="#000000">

                </custom:CustomPicker>
                <StackLayout HeightRequest="3"></StackLayout>
                <custom:CustomEntry
                                CornerRadius="10"
                                IsCurvedCornersEnabled="true"
                                BorderColor="Black"
                                HorizontalTextAlignment="Center"
                                FontSize="17"
                                HeightRequest="40"
                                Placeholder="Ingrese usuario"
                                PlaceholderColor="Gray"
                                TextColor="Black" 
                                Text="admin"
                                x:Name="txtusuario"
                    
                    />
            </StackLayout>
            

            <StackLayout Orientation="Horizontal" Margin="7,2">
                <Button Text="Cancelar" HorizontalOptions="FillAndExpand"  CornerRadius="15" Background="#DF0101" TextColor="White"/>
                <Button Text="Aplicar"  HorizontalOptions="FillAndExpand"  CornerRadius="15" Background="green" TextColor="White"/>
            </StackLayout>

            <StackLayout HeightRequest="15"></StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>