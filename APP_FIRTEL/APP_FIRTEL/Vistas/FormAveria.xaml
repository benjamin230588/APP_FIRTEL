<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:custom="clr-namespace:APP_FIRTEL.Clases"
            
              
              x:Class="APP_FIRTEL.Vistas.FormAveria"
             Title="Editar Averia"
             >
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <Grid Margin="8,15,8,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*"  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="90" />
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="4"/>

                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Text="Cliente" VerticalOptions="Center" FontAttributes="Bold" FontSize="17"/>
                   <Label
                        Text="Rafael Baltazar"
                        
                        Grid.Column="1"  Grid.Row="0" x:Name="txtnombre" VerticalOptions="Center" 
                    
                    />

                    <Label Grid.Column="0" Grid.Row="1" Text="Apellidos" VerticalOptions="Center"  FontAttributes="Bold" FontSize="17"/>
                    <Label
                                
                      Grid.Column="1"  Grid.Row="1" x:Name="txtapellidopaterno" Text="Mucha Soto" VerticalOptions="Center"
                    
                    />



                    <Label Grid.Column="0" Grid.Row="2" Text="Telefono" VerticalOptions="Center"  FontAttributes="Bold" FontSize="17"/>
                    <Label
                                
                      Grid.Column="1"  Grid.Row="2" Text="95622222" VerticalOptions="Center"
                    
                    />
                   
                    <Label Grid.Column="0" Grid.Row="3" Text="Direccion" VerticalOptions="Center"  FontAttributes="Bold" FontSize="17"/>
                    <Label
                                
                      Grid.Column="1"  Grid.Row="3" Text="Mercado Ciudad de Dios puerta 12" VerticalOptions="Center"
                    
                    />


                    <Label Grid.Column="0" Grid.Row="4" Text="Averia" VerticalOptions="Center" FontAttributes="Bold" FontSize="15"/>
                  
                    <custom:BorderedEditor Keyboard="Text" Grid.Column="1" Grid.Row="4" MaxLength="75" x:Name="txtdescripcion" CornerRadius="10"
                                IsCurvedCornersEnabled="true" HeightRequest="350"  BorderColor="Black" Placeholder="Ingrese Observacion" FontSize="14"
                                           Text="Averia corte de clave de red falta conexion del cliente"/>

                    <Label Grid.Column="0" Grid.Row="5" Text="F.Ingreso" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                    <Label Grid.Column="1" Grid.Row="5" Text="01/05/2022" VerticalOptions="Center" FontAttributes="Bold" FontSize="15"/>

                    <Label Grid.Column="0" Grid.Row="6" Text="Observacion" VerticalOptions="Center" FontAttributes="Bold" FontSize="14"/>
                    <custom:BorderedEditor Keyboard="Text" Grid.Column="1" Grid.Row="6" MaxLength="75" CornerRadius="10"
                                IsCurvedCornersEnabled="true" HeightRequest="350"  BorderColor="Black" Placeholder="Ingrese Observacion" FontSize="14"
                                           Text="Averia corte de clave de red falta conexion del cliente"/>

                    <Label Grid.Column="0" Grid.Row="7" Text="Estado" VerticalOptions="Center"  FontAttributes="Bold" FontSize="17"/>
                   
                   
                    <custom:CustomPicker Grid.Column="1"  Grid.Row="7"
                                         Image="ic_arrow_drop_down"
                                        Title="Seleccione Estado"
                                   TitleColor="Green"
                                   ItemsSource="{Binding lista}"
                                         SelectedItem="{Binding defecto}"
                                   FontSize="16"
                                   
                                   ItemColor="#000000">

                    </custom:CustomPicker>


                    <Label Grid.Column="0" Grid.Row="9" Text="F.Registro" VerticalOptions="Center"  FontAttributes="Bold" FontSize="17"/>
                  
                    <custom:DatePickerCtrl  Grid.Column="1"  Grid.Row="9" x:Name="datePicker"   HorizontalOptions="FillAndExpand"
                                             Format="dd/MM/yyyy" 
                                MinimumDate="01/01/1950"/>


                </Grid>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,0,0,30">
                    <Button Text="Registrar" Background="Green" TextColor="White" 
                            x:Name="btnRegistrarUsuario"
                            CornerRadius="15" />
                    <Button Text="Volver" BackgroundColor="Red"
                            x:Name="btnVolverLogin"
                           
                            TextColor="White" CornerRadius="15" />

                </StackLayout>
              
               

                
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>