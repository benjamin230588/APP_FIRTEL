<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_FIRTEL.Vistas.Paginainicio"
              xmlns:custom="clr-namespace:APP_FIRTEL.Clases">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <custom:CustomCheckbox IsChecked="{Binding oEntityLogin}" CheckColor="Green" SizeRequest="50" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="True"  ScaleX="1.5" ScaleY="1.3" HorizontalOptions="CenterAndExpand" OnColor="Green"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="True" HorizontalOptions="CenterAndExpand" BackgroundColor="White"/>
            </StackLayout>
            <Button x:Name="btndale" Text="dale" Clicked="btndale_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>