<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_FIRTEL.Vistas.Visualizadorimg"
              xmlns:local="clr-namespace:APP_FIRTEL.Convertidores"
             Title="Visualizador">
    <ContentPage.Content>
        <Grid Padding="10,10">
            <local:PinchToZoomContainer>
                <local:PinchToZoomContainer.Content>
                    <Image Source="{Binding rutaimg}" x:Name="imgvista"/>
                </local:PinchToZoomContainer.Content>
            </local:PinchToZoomContainer>
        </Grid>
    </ContentPage.Content>
</ContentPage>